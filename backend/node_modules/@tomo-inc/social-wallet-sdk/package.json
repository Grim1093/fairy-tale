{
  "name": "@tomo-inc/social-wallet-sdk",
  "version": "1.1.22",
  "description": "tomo social wallet sdk.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/types.d.ts"
    }
  },
  "license": "MIT",
  "keywords": [
    "SDK"
  ],
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@aptos-labs/ts-sdk": "^1.35.0",
    "@aptos-labs/wallet-standard": "^0.3.0",
    "@mysten/wallet-standard": "^0.14.0",
    "@solana/spl-token": "^0.4.7",
    "@solana/web3.js": "^1.95.0",
    "@types/crypto-js": "4.2.0",
    "@walletconnect/jsonrpc-http-connection": "^1.0.8",
    "@walletconnect/jsonrpc-provider": "^1.0.14",
    "@walletconnect/jsonrpc-utils": "^1.0.8",
    "axios": "^1.8.2",
    "bn.js": "^5.2.1",
    "buffer": "^6.0.3",
    "crypto-js": "4.2.0",
    "eventemitter3": "^5.0.1",
    "js-sha256": "^0.11.0",
    "json-bigint": "^1.0.0",
    "loglevel": "^1.9.1",
    "querystring": "^0.2.1",
    "tonweb": "^0.0.66",
    "tronweb": "6.0.0",
    "uuid": "^11.0.3",
    "viem": "^2.17.0",
    "@tomo-inc/shared-type": "1.0.5"
  },
  "peerDependencies": {
    "@mysten/sui": ">=1.22.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@jest/globals": "^29.1.1",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-inject": "^5.0.5",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^14.14.14",
    "@types/pump": "^1.1.0",
    "@types/readable-stream": "^2.3.9",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "babel-jest": "^29.7.0",
    "eslint": "^7.15.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-node": "^11.1.0",
    "glob": "^11.0.1",
    "jest": "^29.1.1",
    "jest-environment-jsdom": "^29.1.1",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "29.1.1",
    "typescript": "^5.5.3"
  },
  "scripts": {
    "build": "pnpm build:rollup --bundleConfigAsCjs",
    "build:project": "pnpm clean && tsc --project ./tsconfig.build.json",
    "build:rollup": "pnpm clean && BUILD_ENV=${BUILD_ENV} rollup -c",
    "build:rollup:watch": "pnpm clean && rollup -c -w --bundleConfigAsCjs",
    "test": "jest",
    "target": "mkdir -p target && rm -rf target/* && cp -fr ./dist package.json ./target && zip -r sdk.zip target",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext ts,js,json",
    "lint:fix": "pnpm lint --fix",
    "clean": "npm install -g rimraf && npx rimraf dist",
    "require-clean-git": "git diff --quiet || (echo 'Please clean the working directory.' && exit 1)",
    "dev": "BUILD_ENV=development pnpm build:rollup:watch",
    "dev:local": "BUILD_ENV=local pnpm build:rollup:watch",
    "build:dev": "pnpm dev"
  }
}